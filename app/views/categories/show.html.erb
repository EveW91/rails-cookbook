<div class="banner">
  <div class="container">
    <h1><%= "#{@category.name}" %></h1>
  </div>
</div>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li><img src="<%=bookmark.recipe.image_url %>" alt="<% bookmark.recipe.name %> image" />
    <%= bookmark.recipe.name %>
    <%= bookmark.recipe.description %>
    <%= bookmark.recipe.rating %>
    <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?"} %></li>
  <% end %>

  <li><%= link_to "Add Bookmark", new_category_bookmark_path(@category)%></li>

</ul>
