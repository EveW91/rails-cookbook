<div class="banner">
  <div class="container">
    <h1><%= "#{@category.name}" %></h1>
  </div>
</div>

<div class="bookmark-container">
  <% @category.bookmarks.each do |bookmark| %>
    <div class="bookmark-card">
      <%= image_tag bookmark.recipe.image_url, class: "bookmark" %>
      <div class="card-info">
        <h3><%= bookmark.recipe.name %></h3>
        <p><%= bookmark.recipe.description %></p>
        <p><%= bookmark.recipe.rating %></p>
      </div>
        <%= link_to bookmark_path(bookmark),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?"} do %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
    </div>
  <% end %>
</div>

<div class="add-link">
  <%= link_to "Add Bookmark", new_category_bookmark_path(@category)%>
</div>
